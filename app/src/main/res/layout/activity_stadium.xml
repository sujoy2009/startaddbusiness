<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.wcappcafe.copaamericask.stadium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:scaleType="fitXY"
            android:src="@drawable/st1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:scaleType="fitXY"
            android:src="@drawable/st2"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:scaleType="fitXY"
            android:src="@drawable/st3"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:scaleType="fitXY"
            android:src="@drawable/st7"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:scaleType="fitXY"
            android:src="@drawable/st4"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:scaleType="fitXY"
            android:src="@drawable/st5"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:scaleType="fitXY"
            android:src="@drawable/st6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <com.startapp.sdk.ads.banner.Banner
                android:id="@+id/startAppBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>